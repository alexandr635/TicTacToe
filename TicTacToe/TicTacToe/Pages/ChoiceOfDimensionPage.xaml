<Page x:Class="TicTacToe.Pages.ChoiceOfDimensionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="450"
      Title="ChoiceOfDimensionPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Выберите размерность - количество клеток игрового пространства:"></TextBlock>
        <ComboBox Grid.Row="1" Name="choiceOfDimensionCmbBx" DisplayMemberPath="CountOfCells"/>
        <Button Grid.Row="2" Content="Играть" Name="playBtn" Click="PlayBtn_Click"></Button>
        <Button Grid.Row="3" Content="Назад" Name="backBtn" Click="BackBtn_Click"></Button>
    </Grid>
</Page>
